@model List<Enfermo> 
<h1>Eliminar un enfermo lista</h1>
@if (ViewBag.Elim != 0)
{
    <h3>Eliminados: @ViewBag.Elim</h3>
}
<table class="table table-hover">
    <thead>
        <tr>
            <th>Inscripcion</th>
            <th>Apellido</th>
            <th>Direccion</th>
            <th>NSS</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Enfermo e in Model)
        {
            <tr>
                <td>@e.Inscripcion</td>
                <td>@e.Apellido</td>
                <td>@e.Direccion</td>
                <td>@e.Nss</td>
                <td>
                    <a class="btn btn-danger"
                       asp-controller="Enfermos"
                       asp-action="EliminarLista"
                       asp-route-inscripcion="@e.Inscripcion">
                        Eliminar enfermo
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>