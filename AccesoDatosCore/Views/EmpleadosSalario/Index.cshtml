@model List<Empleado>

<h1>Busqueda de empleados por Salario</h1>
<form method="post">
    <label>Introduzca salario: </label>
    <input type="number" name="salario"
           class="form-control" required/>
    <button class="btn btn-info">
        Buscar empleados
    </button>
</form>
<hr/>

@if(Model != null)
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Apellido</th>
                <th>Salario</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Empleado e in Model)
            {
                <tr>
                    <td>@e.Apellido</td>
                    <td>@e.Salario</td>
                </tr>
            }
        </tbody>
    </table>
}