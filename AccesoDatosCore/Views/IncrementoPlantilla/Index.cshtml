@model List<Plantilla>

@{
    List<String> listafunciones = ViewBag.Funciones as List<String>;
}

<h1>Incremento Salario</h1>

<form method="post">
    <label>Seleccione una funcion: </label>
    <select name="funcion" class="form-control">
        @foreach (String f in listafunciones)
        {
            <option value="@f">@f</option>
        }
    </select><br />
    <label>Introduzca el incremento: </label>
    <input type="number" name="incremento"
           class="form-control" required /><br />
    <button class="btn btn-dark">
        Incrementar salario
    </button>
</form>
<hr />
@if (Model != null)
{
    <h2>@ViewBag.Mensaje</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Apellido</th>
                <th>Funcion</th>
                <th>Id</th>
                <th>Salario</th>
                <th>Turno</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Plantilla p in Model)
            {
                <tr>
                    <td>@p.Apellido</td>
                    <td>@p.Funcion</td>
                    <td>@p.IdPlantilla</td>
                    <td>@p.Salario</td>
                    <td>@p.Turno</td>
                </tr>
            }
        </tbody>
    </table>
}