@model List<Empleado>

@{
    List<String> listaoficios = ViewBag.Oficios as List<String>;
}

<h1>Empleados Oficios</h1>

<form method="post">
    <label>Seleccione un oficio: </label>
    <select name="oficio" class="form-control">
        @foreach (String o in listaoficios)
        {
            <option value="@o">@o</option>
        }
    </select>
    <button class="btn btn-dark">
        Elegir
    </button>
</form>

@if (Model != null)
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Apellido</th>
                <th>Oficio</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Empleado e in Model)
            {
                <tr>
                    <td>@e.Apellido</td>
                    <td>@e.Oficio</td>
                </tr>
            }
        </tbody>
    </table>
}